<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="restapi_config" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
			<label>Rest API Configurations</label>
			<tab>alsaifgallery</tab>
			<resource>AlsaifGallery_RestAPIConfig::config_alsaifgallery_restapiconfig</resource>
			<group id="general" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label">
				<label>SMS Verification</label>
				<field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
						<label>Enable</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="verify_message" showInDefault="1" showInStore="1" showInWebsite="1" sortOrder="10" translate="label" type="text">
					<label>Verification Message Text</label>
					<comment/>
				</field>                            
			</group>
		</section>
	</system>
</config>
