<?xml version="1.0" ?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
	<route method="GET" url="/V1/alsaifgallery/storecredit/ewallet/:customerId">
		<service class="AlsaifGallery\StoreCredit\Api\EWalletManagementInterface" method="getEWallet"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
        <route method="GET" url="/V1/alsaifgallery/storecredit/history/:customerId">
		<service class="AlsaifGallery\StoreCredit\Api\EWalletManagementInterface" method="getEWalletHistory"/>
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
</routes>
