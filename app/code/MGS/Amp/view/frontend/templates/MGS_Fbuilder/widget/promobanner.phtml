<?php $bannerImageUrl = $this->getImageUrl() ?>
<?php if($bannerImageUrl!=''): ?>
	<?php $builderHelper = $this->helper('MGS\Fbuilder\Helper\Data'); ?>
	<?php list($width, $height, $type, $attr) = getimagesize(str_replace('https://','http://',$bannerImageUrl)); ?>
	<a class="mgs-promobanner promobanner" href="<?= $this->getBannerUrl() ?>">
		<amp-img width="<?= $width ?>" height="<?= $height ?>" layout="responsive" alt="" src="<?= $bannerImageUrl ?>"></amp-img>
