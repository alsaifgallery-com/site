<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="checkout" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root" >
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="sidebar" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="summary" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="block-amasty-cash-on-delivery-summary" xsi:type="array">
                                                    <item name="component" xsi:type="string">uiComponent</item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="block-amasty-cash-on-delivery" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="amasty-conditions" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Amasty_CashOnDelivery/js/model/payment-subscribe</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                                <item name="totals" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="amasty_cash_on_delivery_fee" xsi:type="array">
                                                            <item name="component"  xsi:type="string">Amasty_CashOnDelivery/js/view/checkout/summary/payment-fee</item>
                                                            <item name="sortOrder" xsi:type="string">50</item>
                                                            <item name="template" xsi:type="string">Amasty_CashOnDelivery/checkout/summary/payment-fee</item>
                                                            <item name="title" xsi:type="string" translate="true">Cash on Delivery Fee</item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
