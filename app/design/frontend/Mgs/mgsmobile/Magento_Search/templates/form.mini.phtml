$themeSettingConfig = $this->helper('MGS\ThemeSettings\Helper\Config');
if($themeSettingConfig->getStoreConfig('instantsearch/general/result') == 0){
    $action = $block->getBaseUrl().'/instantsearch/result/';
}else{
    $action = $helper->getResultUrl();
}
?>
